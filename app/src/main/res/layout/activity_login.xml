<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".auth.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="쉽게 가입하고 \n 간편하게 로그인하세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="113sp"
            android:gravity="center" />
        <TextView
            android:text="나의 진짜 이상현 찾기, 라잇"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#A2A2A2"
            android:gravity="center" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/txtcolor"
            android:background="@drawable/text_input_boder">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:hint="email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txtcolor"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_margin="10dp"
            android:background="@drawable/text_input_boder"
            android:textColorHint="@color/txtcolor"
            app:counterEnabled="true"
            app:counterMaxLength="12">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password"
                android:inputType="textPassword"
                android:textColor="@color/txtcolor" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login"
            android:text="로그인"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/join"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="또는"
            android:textColor="#A2A2A2"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:background="@drawable/kakaologin"
                android:layout_marginEnd="17dp"/>

            <Button
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:background="@drawable/applelogin"
                android:layout_marginEnd="17dp" />

            <Button
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:background="@drawable/naverlogin" />

        </LinearLayout>

        <TextView
            android:id="@+id/forgotid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="계정을 잊으셨나요?  >"
            android:textColor="#A2A2A2"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>